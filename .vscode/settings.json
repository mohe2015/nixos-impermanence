{
    "nix.enableLanguageServer": true, // Enable LSP.
    "nix.serverPath": "rnix-lsp", // The path to the LSP server executable.
    // https://github.com/nix-community/nixd/blob/main/docs/user-guide.md#installation
    "nix.serverSettings": {
        "nixd": {
            "eval": {
                "target": {
                    "args": [
                        "--json",
                        "-I",
                        "nixos-config=nixos/modules/installer/sd-card/sd-image-x86_64.nix",
                        "--file",
                        "./nixos",
                        "config.system.build.sdImage"
                      ],
                      // AttrPath
                      "installable": ""
                },
            },
        }
    }
}